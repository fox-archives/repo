{
	"$schema": "http://json-schema.org/draft-04/schema",
	"type": "object",
	"additionalProperties": false,
	"required": ["person", "github_token", "defaults"],
	"properties": {
		"person": {
			"type": "object",
			"additionalProperties": false,
			"required": ["fullname", "email", "websiteURL"],
			"properties": {
				"fullname": {
					"type": "string"
				},
				"email": {
					"type": "string"
				},
				"websiteURL": {
					"type": "string"
				}
			}
		},
		"github_token": {
			"type": "string"
		},
		"defaults": {
			"type": "object",
			"additionalProperties": false,
			"required": ["vcsOwner", "vcsSite"],
			"properties": {
				"vcsOwner": {
					"type": "string"
				},
				"vcsSite": {
					"type": "string"
				}
			}
		}
	}
}
